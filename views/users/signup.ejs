<% layout("/layouts/boilerplate") %>

<h1 class="col-6 offset-3">SignUp on Wanderlust</h1>
<div class="row">
    <div class="col-6 offset-3">
        <form action="/signup" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username:</label>
                <input name="username"  type="text" class="form-control" required id="username">
                <div class="valid-feedback">
                    Looks Good!
                  </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label>
                <input name="email"  type="text" class="form-control" required id="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input name="password"  type="password" class="form-control" required id="password">
            </div>
            <button class="btn btn-success">Signup</button>
        </form>
    </div>
</div>